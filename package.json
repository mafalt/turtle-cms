{
  "name": "turtle-cms",
  "version": "0.0.1",
  "description": "Skeleton for CMS system based on Node.js and Express JS with TypeScript support",
  "main": "dist/main.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "copy-assets": "ts-node tools/copyAssets.ts",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "install-packages": "npm install",
    "build": "npm-run-all clean install-packages tsc copy-assets",
    "dev:start": "npm-run-all build start",
    "dev": "nodemon --watch src --watch package.json -e ts,ejs --exec npm run dev:start",
    "start": "node .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "Content Management System",
    "Node JS",
    "Express JS",
    "Database",
    "CMS",
    "MySQL",
    "PostgreSQL"
  ],
  "author": {
    "name": "Martin Falta",
    "email": "martin.falta@gmail.com",
    "url": "https://www.martinfalta.cz"
  },
  "license": "ISC",
  "repository": "https://github.com/mafalt/turtle-cms",
  "bugs": "https://github.com/mafalt/turtle-cms/issues",
  "dependencies": {
    "express": "^4.17.1",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "morgan": "^1.10.0",
    "dotenv": "^8.2.0",
    "express-session": "^1.17.1"
  },
  "devDependencies": {
    "typescript": "^3.4.3",
    "ts-node": "^9.0.0",
    "shelljs": "^0.8.4",
    "fs-extra": "^9.0.1",
    "rimraf": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "tslint": "^6.1.3",
    "@types/node": "^12.12.2",
    "@types/express": "^4.11.1",
    "@types/morgan": "^1.7.35",
    "@types/body-parser": "^1.17.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/dotenv": "^8.2.0",
    "@types/express-session": "^1.15.8",
    "@types/shelljs": "^0.7.9"
  }
}
